{
  "name": "custom-mui-library",
  "version": "0.1.0",
  "description": "Custom React component library with JSON-driven styling",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src/styles/generated"
  ],
  "scripts": {
    "generate-css": "node src/utils/JsonToCssSplit.js src/styles/theme.json src/styles/generated",
    "prepare": "npm run generate-css && npm run build:lib",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:lib": "babel src/lib.js src/Components src/utils --out-dir dist --copy-files",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "keywords": [
    "react",
    "component",
    "library",
    "css",
    "json"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  }
}